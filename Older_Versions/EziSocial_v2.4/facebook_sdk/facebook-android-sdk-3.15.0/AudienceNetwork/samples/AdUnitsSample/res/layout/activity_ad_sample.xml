<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#E4E5E8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
            android:id="@+id/adStatusLabel"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:text="@string/loading_status"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            />

    <LinearLayout
            android:id="@+id/interstitialAdControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="100dp"
            >

        <Button
                android:id="@+id/loadInterstitialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load_interstitial"
                android:textSize="15sp"
                />

        <Button
                android:id="@+id/showInterstitialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_interstitial"
                android:textSize="15sp"
                />

    </LinearLayout>

    <TextView
            android:id="@+id/interstitialAdStatusLabel"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/interstitialAdControls"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            />


    <RelativeLayout
            android:id="@+id/adViewContainer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            />

</RelativeLayout>
